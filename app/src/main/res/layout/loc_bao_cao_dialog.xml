<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <include layout="@layout/custom_toolbar_bo_loc" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:background="#3A91D6"
        android:gravity="left"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:text="Thời Gian"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radTatCaThoiGianBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Tất Cả"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radHomNayBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hôm nay"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radHomQuaBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hôm qua"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radTuanNayBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuần này"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radTuanTruocBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuần trước"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radThangNayBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tháng này"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radThangTruocBC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tháng Trước"
            android:textColor="#000000" />
    </RadioGroup>
</LinearLayout>